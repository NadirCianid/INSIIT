<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="interfaceControllers.MainPageController">
   <children>
      <Label layoutX="275.0" layoutY="24.0" text="INSIIT">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="182.0" layoutY="59.0" text="Виртуальный косметический помощник">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="searchTF" layoutX="260.0" layoutY="86.0" prefHeight="25.0" prefWidth="259.0" promptText="Введите название продукта" />
      <Button layoutX="527.0" layoutY="86.0" mnemonicParsing="false" onAction="#filterByName" text="Искать" />
      <ComboBox fx:id="categoryCB" layoutX="25.0" layoutY="86.0" onAction="#filterByCategory" prefHeight="25.0" prefWidth="224.0" promptText="Категория (обл. применения)" />
      <TableView fx:id="productsTV" layoutX="25.0" layoutY="121.0" prefHeight="218.0" prefWidth="557.0">
        <columns>
          <TableColumn fx:id="nameTC" prefWidth="75.0" text="Название" />
          <TableColumn fx:id="shortDescTC" prefWidth="326.0" text="Краткое описание" />
            <TableColumn fx:id="ratingTC" prefWidth="52.0" text="Рейтинг" />
            <TableColumn fx:id="priceTC" prefWidth="103.0" text="Цена" />
        </columns>
      </TableView>
      <Button layoutX="404.0" layoutY="349.0" mnemonicParsing="false" onAction="#seeMoreAboutProduct" text="Подробная информация">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button layoutX="25.0" layoutY="351.0" mnemonicParsing="false" onAction="#newProductReview" text="Оставить отзыв о новом продукте" />
   </children>
</AnchorPane>
